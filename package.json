{
  "name": "@paybyrd/agent-toolkit",
  "version": "1.0.0",
  "type":"module",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint \"./**/*.ts*\"",
    "prettier": "prettier './**/*.{js,ts,md,html,css}' --write",
    "prettier-check": "prettier './**/*.{js,ts,md,html,css}' --check",
    "test": "jest",
    "claude-mcp": "ts-node ./src/claude/servers/index.ts",
    "prepublishOnly": "tsc"
  },
  "bin": {
    "claude-mcp": "./dist/claude/servers/index.js"
  },
  "exports": {
    "./openai": {
      "types": "./dist/openai/index.d.ts",
      "require": "./dist/openai/index.js",
      "import": "./dist/openai/index.js"
    },
    "./modelcontextprotocol": {
      "types": "./dist/modelcontextprotocol/index.d.ts",
      "require": "./dist/modelcontextprotocol/index.js",
      "import": "./dist/modelcontextprotocol/index.js"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "agentkit",
    "ai",
    "artificial intelligence",
    "paybyrd",    
    "mcp"
  ],
  "author": "Paybyrd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/paybyrd/agent-toolkit-js/issues"
  },
  "homepage": "https://github.com/paybyrd/agent-toolkit-js#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.8.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2"
  },
  "dependencies": {    
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.8",
    "uuid": "^11.1.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.4",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "colors": "^1.4.0"    
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "openai": "^4.28.0"
  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md",
    "package.json"
  ]
}
